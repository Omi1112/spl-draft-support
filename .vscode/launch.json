{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: デバッグサーバー",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--inspect",
        "WATCHPACK_POLLING": true
      },
      "console": "integratedTerminal",
      "sourceMaps": true
    },
    {
      "name": "Next.js: デバッグブラウザ",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${webRoot}/*"
      }
    },
    {
      "name": "GraphQL APIデバッグ",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "フル起動（サーバー＆ブラウザ）",
      "configurations": [
        "Next.js: デバッグサーバー",
        "Next.js: デバッグブラウザ"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "main",
        "order": 1
      }
    }
  ]
}
